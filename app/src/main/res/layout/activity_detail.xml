<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.DetailActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewAvengerCharacter"
        android:layout_width="160dp"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:src="@drawable/splash_avengers" />

    <TextView
        android:id="@+id/textViewCharacterName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageViewAvengerCharacter"
        app:layout_constraintStart_toStartOf="@+id/imageViewAvengerCharacter"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAvengerCharacter"
        tools:text="Nombre del personaje" />

    <TextView
        android:id="@+id/textViewCharacterDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@color/dark_withAlpha"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCharacterName"
        tools:text="DescripciÃ³n del personaje" />

</androidx.constraintlayout.widget.ConstraintLayout>